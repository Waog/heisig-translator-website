{
  "name": "heisig-translator-website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "update-assets": "npm run update-dictionary && npm run update-frequencies && npm run update-tatoeba && npm run update-heisig",
    "update-dictionary": "node scripts/update-dictionary.js",
    "update-frequencies": "node scripts/update-frequencies.js",
    "update-tatoeba": "npm run update-tatoeba:download-raw && update-tatoeba:parse-raw && update-tatoeba:map-to-asset",
    "update-tatoeba:download-raw": "node scripts/tatoeba-download-raw.js",
    "update-tatoeba:parse-raw": "node scripts/tatoeba-parse-raw.js",
    "update-tatoeba:map-to-asset": "node scripts/tatoeba-map-to-asset.js",
    "update-heisig": "node scripts/update-heisig.js",
    "e2e": "ng e2e --browser=chrome --e2e",
    "e2e:record-api": "rimraf cypress/fixtures/online-translation-cache && cross-env RECORD_MODE=true npm run e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "file-saver": "^2.0.5",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "pinyin-pro": "^3.24.0",
    "rxjs": "~7.8.0",
    "segmentit": "^2.0.3",
    "tslib": "^2.3.0",
    "unzipper": "^0.12.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.2",
    "@angular/cli": "^18.1.2",
    "@angular/compiler-cli": "^18.1.0",
    "@cypress/schematic": "^2.5.2",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.4.0",
    "angular-cli-ghpages": "^2.0.1",
    "axios": "^1.7.3",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "cypress": "latest",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.2",
    "unbzip2-stream": "^1.4.3"
  }
}
